задание 13 на языке си 
#include <stdio.h>

int main() {
    int n;
    
    printf("Введите ваш возраст (целое число от 1 до 99): ");
    scanf("%d", &n);
    
    if (n >= 11 && n <= 14 || n % 10 == 0 || (n % 10 >= 5 && n % 10 <= 9)) {
        printf("Мне %d лет.\n", n);
    } else if (n % 10 == 1) {
        printf("Мне %d год.\n", n);
    } else {
        printf("Мне %d года.\n", n);
    }
    
    return 0;
}
